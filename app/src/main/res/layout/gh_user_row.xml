<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp">

    <com.mikhaellopez.gradientview.GradientView
        android:id="@+id/gradientView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:gv_direction="left_to_right"
        app:gv_end="#9C27B0"
        app:gv_start="#3f51b5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:layout_toEndOf="@id/gh_userpic"
        android:paddingVertical="22dp">

        <TextView
            android:id="@+id/gh_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textSize="12sp"
            android:layout_below="@id/gh_fname"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/gh_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/gh_userpic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

</RelativeLayout>